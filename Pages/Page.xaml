<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ISIEvents.Pages.Page"
               Color="White" HorizontalOptions="Center" Size="400,500"
             >
    <VerticalStackLayout >
        <Label Text="{Binding Name}" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,0" />
        <Image Source="{Binding EventURL}" Aspect="Fill" WidthRequest="300" HeightRequest="300" Margin="0,10,0,0" />
        <StackLayout Margin="10,10,10,0">
            <Label Text="{Binding Categorie}" FontAttributes="Bold" />
            <Label Text="{Binding Description}" LineBreakMode="WordWrap" />
        </StackLayout>
    </VerticalStackLayout>
</toolkit:Popup>